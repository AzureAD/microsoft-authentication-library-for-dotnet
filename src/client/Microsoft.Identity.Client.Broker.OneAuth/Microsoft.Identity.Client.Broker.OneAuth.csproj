<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworkNetStandard>netstandard2.0</TargetFrameworkNetStandard>
    <TargetFrameworkNetDesktop Condition="$([MSBuild]::IsOsPlatform('Windows'))">net462</TargetFrameworkNetDesktop>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <TargetFramework Condition="'$(TargetFrameworkNetDesktop)' == ''">$(TargetFrameworkNetStandard)</TargetFramework>
    <TargetFrameworks Condition="'$(TargetFrameworkNetDesktop)' != ''">$(TargetFrameworkNetStandard);$(TargetFrameworkNetDesktop)</TargetFrameworks>
    <Configurations>Debug;Release;Debug + MobileApps</Configurations>
    
    <!-- Disable PublicAPI analyzer for placeholder types until real OneAuth package is available -->
    <EnablePackageValidation>false</EnablePackageValidation>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    
    <!-- Suppress CS8002: Referenced assembly does not have a strong name -->
    <!-- OneAuth assemblies are not strong-named yet, this is expected in experimental package -->
    <NoWarn>$(NoWarn);CS8002</NoWarn>
  </PropertyGroup>

  <PropertyGroup Label="NuGet and AssemblyInfo metadata">
    <!--This should be passed from the VSTS build-->
    <MicrosoftIdentityClientVersion Condition="'$(MicrosoftIdentityClientVersion)' == ''">$(MsalInternalVersion)</MicrosoftIdentityClientVersion>
    <!--This will generate AssemblyVersion, AssemblyFileVersion and AssemblyInformationVersion-->
    <Version>$(MicrosoftIdentityClientVersion)</Version>
    <!-- Copyright needs to be in the form of Â© not (c) to be compliant -->
    <Title>MSAL.NET extension for OneAuth broker support</Title>
    <Description>
      This package contains binaries needed to use OneAuth brokers in public client desktop applications. This is an experimental package for transitioning from MSALRuntime to OneAuth.
    </Description>
    <PackageTags>Microsoft Authentication Library Desktop MSAL OneAuth broker Windows Authentication Manager</PackageTags>
    <Product>Microsoft Authentication Library OneAuth Broker</Product>
  </PropertyGroup>

  <PropertyGroup Label="For CI build" Condition="'$(TF_BUILD)' == 'true'">
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Microsoft.Identity.Client\Properties\InternalsVisibleTo.cs" Link="Properties\InternalsVisibleTo.cs" />
  </ItemGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == '$(TargetFrameworkNetDesktop)'">
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <ItemGroup>
    <!-- OneAuth dependencies based on CMake file -->
    <PackageReference Include="Microsoft.Bcl.AsyncInterfaces" />
    <PackageReference Include="System.Drawing.Common" />
    <PackageReference Include="System.Threading.Channels" />
    
    <!-- OneAuth NuGet package -->
    <PackageReference Include="Microsoft.OneAuth" />
    
    <ProjectReference Include="..\Microsoft.Identity.Client\Microsoft.Identity.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="PublicAPI/PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI/PublicAPI.Unshipped.txt" />
  </ItemGroup>
</Project>
