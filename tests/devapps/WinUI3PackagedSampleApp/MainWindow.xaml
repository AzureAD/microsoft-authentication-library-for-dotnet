<Window
    x:Class="WinUI3PackagedSampleApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUI3PackagedSampleApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="MSAL.NET WinUI3 Test App" FontSize="24" HorizontalAlignment="Center"/>
            
            <!-- WebView Option -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Spacing="10">
                <CheckBox x:Name="UseEmbeddedWebViewCheckBox" Content="Use Embedded WebView" 
                          HorizontalAlignment="Center" ToolTipService.ToolTip="When checked, uses embedded WebView. When unchecked, uses system browser."/>
            </StackPanel>
            
            <Button x:Name="LoginButton" Content="Login with MSAL" Click="LoginButton_Click" HorizontalAlignment="Center"/>
            <TextBlock x:Name="ResultTextBlock" Text="Click login to test MSAL authentication" 
                       HorizontalAlignment="Center" TextWrapping="Wrap" MaxWidth="400"/>
        </StackPanel>
    </Grid>
</Window>
